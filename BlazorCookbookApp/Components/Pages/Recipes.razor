@page "/recipes"
@using BlazorCookbookApp.Services
@inject RecipeScanner RecipeScanner
@rendermode InteractiveServer

<PageTitle>Browse Recipes - Blazor Cookbook</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Browse Recipes</h1>
            <p class="lead">
                Discover all available Blazor Cookbook recipes. Each recipe demonstrates 
                specific Blazor concepts and patterns.
            </p>
            
            <div class="alert alert-info">
                <strong>Coming Soon:</strong> The complete recipe overview table will be moved here from the home page.
                This page will provide centralized access to all recipes with search and filtering capabilities.
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Recipe Categories</h5>
                            <p class="card-text">
                                Recipes are organized by chapters covering different aspects of Blazor development:
                            </p>
                            <ul>
                                <li><strong>Chapter 1:</strong> Core Components and Concepts</li>
                                <li><strong>Chapter 2:</strong> Advanced Patterns (Coming Soon)</li>
                                <li><strong>Chapter 3:</strong> Real-world Applications (Coming Soon)</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Getting Started</h5>
                            <p class="card-text">
                                New to Blazor? Start with these foundational recipes:
                            </p>
                            <ul>
                                <li>Recipe 1.2: Simple component composition</li>
                                <li>Recipe 1.3: Server vs Client components</li>
                                <li>Recipe 1.4: Render modes demonstration</li>
                            </ul>
                            <a href="/" class="btn btn-primary">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

